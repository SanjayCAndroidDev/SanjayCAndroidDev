<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_6sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp">

            <ImageView
                android:id="@+id/raw_notification_list_img_icon"
                android:layout_width="wrap_content"
                android:src="@drawable/notification"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/raw_notification_list_txt_notification"
                android:layout_width="match_parent"
                android:textColor="@color/color_dark_blue_green"
                android:layout_toEndOf="@+id/raw_notification_list_img_icon"
                android:textSize="@dimen/_14sdp"
                android:text="Your RV is booked from 22Feb to 28 Feb"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toStartOf="@+id/raw_notification_list_txt_date"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/raw_notification_list_txt_date"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:textColor="@color/color_dark_blue_green"
                android:text="10:55 PM"
                android:layout_alignBottom="@+id/raw_notification_list_txt_notification"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content" />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>