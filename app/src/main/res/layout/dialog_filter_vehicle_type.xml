<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_background_default_popup"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_filter_vehicle_type_txt_drivable"
            android:layout_width="0dp"
            android:padding="@dimen/_8sdp"
            android:text="Drivable"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/bg_orange_fill_left"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dialog_filter_vehicle_type_txt_towable"
            android:layout_width="0dp"
            android:padding="@dimen/_8sdp"
            android:text="Towable"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/color_red_orange"
            android:textStyle="bold"
            android:background="@drawable/bg_orage_line_right"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_filter_vehicle_type_recycler"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_16sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_16sdp">

        <TextView
            android:id="@+id/dialog_filter_vehicle_type_txt_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_weight="1"
            android:background="@drawable/bd_orage_line_small"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="CANCEL"
            android:textColor="@color/color_red_orange"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/dialog_filter_vehicle_type_txt_apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_add_vehicle"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="APPLY"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>