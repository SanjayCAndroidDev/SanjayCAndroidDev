<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/_14sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/raw_my_trip_list_img_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:src="@drawable/image_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:background="@drawable/bg_vehicle_list"
                android:layout_below="@+id/raw_my_trip_list_img_main">

                <TextView
                    android:id="@+id/raw_my_trip_list_txt_date"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_dark_blue_green"
                    android:textSize="@dimen/_13sdp"
                    android:maxLines="1"
                    android:text="21 Jan to 3 Feb 21"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/raw_my_trip_list_txt_status"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_13sdp"
                    android:maxLines="1"
                    android:text=" â€¢ Waiting Owner"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/raw_my_trip_list_txt_name"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_dark_blue_green"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_below="@+id/raw_my_trip_list_txt_date"
                    android:maxLines="1"
                    android:text="White Travel Trailers 2018 - Delivery Availa... "
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/raw_my_trip_list_txt_price"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:layout_below="@+id/raw_my_trip_list_txt_name"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="US $125"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>