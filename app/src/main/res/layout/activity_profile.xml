<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/activity_profile_relative_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_220sdp"
            android:background="@drawable/bg_vehicle_list">


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/activity_profile_img_user"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="@color/orange"
                app:civ_border_width="@dimen/_4sdp" />

            <TextView
                android:id="@+id/activity_profile_txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_profile_img_user"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/app_name"
                android:textColor="@color/color_dark_blue_green"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_profile_txt_user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:src="@drawable/ic_location_on"
                    android:tint="@color/color_red_orange"
                    android:layout_height="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/activity_profile_txt_location"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_height="wrap_content"
                    android:text="2757 Wilmar farm road"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>


        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_profile_relative_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_profile_txt_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:drawableStart="@drawable/profile"
                    android:drawablePadding="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_8sdp"
                    android:text="Profile"
                    android:textColor="@color/color_still_grey"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/activity_profile_txt_trip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:drawableStart="@drawable/trip"
                    android:drawablePadding="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_8sdp"
                    android:text="Trips"
                    android:textColor="@color/color_still_grey"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/activity_profile_txt_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:drawableStart="@drawable/payment"
                    android:drawablePadding="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_8sdp"
                    android:text="Payment"
                    android:textColor="@color/color_still_grey"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/activity_profile_txt_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:drawableStart="@drawable/notifications"
                    android:drawablePadding="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_8sdp"
                    android:text="Notifications"
                    android:textColor="@color/color_still_grey"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/activity_profile_txt_locations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:drawableStart="@drawable/ic_location_on"
                    android:drawablePadding="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_8sdp"
                    android:text="Locations"
                    android:textColor="@color/color_still_grey"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/activity_profile_txt_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:drawableStart="@drawable/help"
                    android:drawablePadding="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_8sdp"
                    android:text="Help"
                    android:textColor="@color/color_still_grey"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/activity_profile_txt_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:drawableStart="@drawable/logout"
                    android:drawablePadding="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_8sdp"
                    android:text="Logout"
                    android:textColor="@color/color_still_grey"
                    android:textSize="@dimen/_16sdp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>

</layout>