<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_background_default_popup"
    android:orientation="vertical"
    android:paddingStart="@dimen/_10sdp"
    android:paddingTop="@dimen/_16sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingBottom="@dimen/_16sdp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter City"
        android:textColor="@color/color_dark_blue_green"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dialog_filter_city_edit_city_name"
        android:layout_width="match_parent"
        android:background="@drawable/bg_spinner_add_vehicle_details"
        android:layout_centerVertical="true"
        android:inputType="textEmailAddress"
        android:hint="Type a place like chicago"
        android:maxLines="1"
        android:layout_marginTop="@dimen/_16sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:layout_height="@dimen/_40sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_filter_city_txt_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_weight="1"
            android:background="@drawable/bd_orage_line_small"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="CANCEL"
            android:textColor="@color/color_red_orange"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/dialog_filter_city_txt_apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_add_vehicle"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="APPLY"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>