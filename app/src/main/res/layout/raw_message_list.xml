<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp"
    android:background="@android:color/transparent">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/raw_message_list_txt_image"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:src="@drawable/image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_toStartOf="@+id/raw_message_list_txt_count"
        android:layout_toEndOf="@+id/raw_message_list_txt_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/raw_message_list_txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Julian Florez"
            android:textColor="@color/color_dark_blue_green"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/raw_message_list_txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="Have you sent the updated..."
            android:textColor="@color/color_still_grey"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/raw_message_list_txt_count"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/bg_count"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />


</RelativeLayout>